<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadastro.View.ListaClientes"
             Title="Clientes">
    <ScrollView>
        <StackLayout>
            <Label Text="Listagem de Clientes"
                HorizontalOptions="Center"
                FontSize="Medium"
                FontAttributes="Bold"
                Margin="15"/>
            <SearchBar x:Name="pesquisarCliente"
                Placeholder="Informe a pesquisa"
                TextChanged="pesquisarCliente_TextChanged"/>
            <ListView x:Name="ListViewCliente"/>
            <Button x:Name="btnAddCliente" Text="Adicionar Novo"/>
        </StackLayout>
    </ScrollView>
</ContentPage>